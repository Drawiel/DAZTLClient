<UserControl x:Class="DAZTLClient.Windows.UserControllers.ArtistCover"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DAZTLClient.Windows.UserControllers"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Border" x:Key="HoverBorderStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#54595E"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Añade esto para asegurar que las imágenes se carguen correctamente -->
        <BitmapImage x:Key="LikeBlack" UriSource="/Multimedia/icons/like_black.png"/>
        <BitmapImage x:Key="LikeBlue" UriSource="/Multimedia/icons/like_blue.png"/>
    </UserControl.Resources>

    <Border
        Style="{StaticResource HoverBorderStyle}"
        Width="287"
        Height="350"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid>
            <!-- Botón principal (con ZIndex más bajo) -->
            <Button
                Click="btnRecentSong_Click"
                Background="Transparent"
                x:Name="btnAccept"
                HorizontalAlignment="Stretch" 
                Height="350"
                Margin="0"
                VerticalAlignment="Stretch" 
                Width="287"
                BorderBrush="Transparent"
                Panel.ZIndex="0">

                <Viewbox>
                    <Grid Margin="0" Width="287" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding AlbumCover, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Width="270" 
                       d:Source="/Multimedia/image6.png"
                       Height="270" 
                       Stretch="Uniform" 
                       Margin="7,7,0,0" 
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top">
                            <Image.Clip>
                                <EllipseGeometry Center="135,135" RadiusX="135" RadiusY="135"/>
                            </Image.Clip>
                        </Image>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7,0,7,0">
                            <TextBlock 
                            Text="{Binding SongTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            d:Text="Anxiety"
                            FontSize="16"
                            FontWeight="Light"
                            Foreground="White"
                            FontFamily="Nunito"/>
                            <TextBlock 
                            Text="{Binding ArtistName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            d:Text="Doechii"
                            FontSize="16"
                            FontWeight="Light"
                            Foreground="White"
                            Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </Button>

            <!-- Botón de Like -->
            <Button x:Name="btnLike" 
                Click="btnLike_Click"
                Width="40" 
                Height="40" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Panel.ZIndex="1"
                Padding="0">
                <Image x:Name="imgLike" 
                    Stretch="Uniform"
                    Source="/Multimedia/icons/like_black.png"/>
            </Button>
        </Grid>
    </Border>
</UserControl>