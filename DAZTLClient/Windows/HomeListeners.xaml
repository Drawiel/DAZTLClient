<Page x:Class="DAZTLClient.Windows.HomeListeners"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DAZTLClient.Windows"
      xmlns:controls="clr-namespace:DAZTLClient.Windows.UserControllers"

      mc:Ignorable="d" 
      Title="HomeListeners">
    <Page.Background>
        <ImageBrush ImageSource="pack://application:,,,/Multimedia/HomeListeners.png"/>
    </Page.Background>

    <Grid
        Width="1920"
        Height="1080">
        <ScrollViewer 
        Width="1899"
        HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Margin="10,86,10,152">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Width="1920" Height="510" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="560"/>
                        <ColumnDefinition Width="23"/>
                        <ColumnDefinition Width="560"/>
                        <ColumnDefinition Width="23"/>
                        <ColumnDefinition Width="560"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Height="40"
                    Text="Canciones recientes"
                    FontFamily="Nunito"
                    FontSize="40"
                    Foreground="White"
                    Margin="0,0,0,20"
                    />

                    <Border 
                    Grid.Column="1"
                    Grid.Row="1"
                    x:Name="BrdRecentSong1"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSong1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120"
                                     Margin="0,0,0,0"/>
                    </Border>

                    <Border
                    Grid.Column="1"
                    Grid.Row="3"
                    x:Name="BrdRecentSong2"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120"
                                     Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                    Grid.Column="1"
                    Grid.Row="5"
                    x:Name="BrdRecentSong3"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon3"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120"
                                     Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                    Grid.Column="3"
                    Grid.Row="1"
                    x:Name="BrdRecentSong4"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon4"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120"
                                     Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                    Grid.Column="3"
                    Grid.Row="3"
                    x:Name="BrdRecentSong5"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon5"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120"
                                     Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                    Grid.Column="3"
                    Grid.Row="5"
                    x:Name="BrdRecentSong6"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon6"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120" Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                    Grid.Column="5"
                    Grid.Row="1"
                    x:Name="BrdRecentSong7"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon7"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120" Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                    Grid.Column="5"
                    Grid.Row="3"
                    x:Name="BrdRecentSong8"
                    Background="Transparent"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon8"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120" Margin="0,0,0,0"/>
                    </Border>

                    <Border 
                        Grid.Column="5"
                        Grid.Row="5"
                        x:Name="BrdRecentSong9"
                        Background="Transparent"
                        Visibility="Visible"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">

                        <controls:RecentSong x:Name="RecentSon9"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="560"
                                     Height="120" Margin="0,0,0,0"/>
                    </Border>

                </Grid>

                <Grid  
                    Height="430"
                    Grid.Row="1" 
                    Margin="0,20,20,20">
                    <DockPanel Height="430" Margin="95,0,95,0">

                        <Grid
                            DockPanel.Dock="Top">
                            <TextBlock
                            DockPanel.Dock="Top"
                            VerticalAlignment="Bottom"
                            Height="40"
                            Text="Playlist"
                            FontFamily="Nunito"
                            FontSize="40"
                            Foreground="White"
                            Margin="0,0,0,20"
                            />
                            <Button Content="Ver todo"
                                Background="Transparent"
                                Foreground="#8B8D90"
                                BorderBrush="Transparent"
                                VerticalContentAlignment="Bottom"
                                FontFamily="Nunito"    
                                DockPanel.Dock="Top"
                                VerticalAlignment="Bottom"
                                Height="30"
                                Width="87"
                                HorizontalAlignment="Left"
                                Margin="130,0,0,20"
                                />
                            <Button
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                Height="30"
                                Width="30"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,12"
                                Click="NextPagePlaylists_Click"
                                BorderBrush="Transparent">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Multimedia/Icons/keyboard_arrow_right.png" Stretch="UniformToFill"/>
                                </Button.Background>
                            </Button>

                        </Grid>

                        <UniformGrid x:Name="PlaylistGrid" 
                             Rows="1" 
                             Columns="6" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             Margin="0,0,0,20"/>
                    </DockPanel>
                </Grid>

                <Grid 
                    Height="430"
                    Grid.Row="2" 
                    Margin="0,0,20,20">
                    <DockPanel Height="430" Margin="95,0,95,0">

                        <Grid
                            DockPanel.Dock="Top">
                            <TextBlock
                            DockPanel.Dock="Top"
                            VerticalAlignment="Bottom"
                            Height="40"
                            Text="Albums"
                            FontFamily="Nunito"
                            FontSize="40"
                            Foreground="White"
                            Margin="0,0,0,20"
                            />
                            <Button Content="Ver todo"
                                Background="Transparent"
                                Foreground="#8B8D90"
                                BorderBrush="Transparent"
                                VerticalContentAlignment="Bottom"
                                FontFamily="Nunito"    
                                DockPanel.Dock="Top"
                                VerticalAlignment="Bottom"
                                Height="30"
                                Width="87"
                                HorizontalAlignment="Left"
                                Margin="130,0,0,20"
                                />
                            <Button
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                Height="30"
                                Width="30"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,12"
                                Click="NextPageAlbums_Click"
                                BorderBrush="Transparent">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Multimedia/Icons/keyboard_arrow_right.png" Stretch="UniformToFill"/>
                                </Button.Background>
                            </Button>

                        </Grid>

                        <UniformGrid x:Name="AlbumsGrid" 
                             Rows="1" 
                             Columns="6" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             Margin="0,0,0,20"/>
                    </DockPanel>
                </Grid>

                <Grid  
                    Height="430"
                    Grid.Row="3" 
                    Margin="0,20,20,20">
                    <DockPanel Height="430" Margin="95,0,95,0">

                        <Grid
                            DockPanel.Dock="Top">
                            <TextBlock
                                DockPanel.Dock="Top"
                                VerticalAlignment="Bottom"
                                Height="40"
                                Text="Artistas"
                                FontFamily="Nunito"
                                FontSize="40"
                                Foreground="White"
                                Margin="0,0,0,20"
                                />
                            <Button Content="Ver todo"
                                Background="Transparent"
                                Foreground="#8B8D90"
                                BorderBrush="Transparent"
                                VerticalContentAlignment="Bottom"
                                FontFamily="Nunito"    
                                DockPanel.Dock="Top"
                                VerticalAlignment="Bottom"
                                Height="30"
                                Width="87"
                                HorizontalAlignment="Left"
                                Margin="140,0,0,20"
                                />
                            <Button
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                Height="30"
                                Width="30"
                                HorizontalAlignment="Right"
                                Margin="0,0,0,12"
                                Click="NextPageArtists_Click"
                                BorderBrush="Transparent">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Multimedia/Icons/keyboard_arrow_right.png" Stretch="UniformToFill"/>
                                </Button.Background>
                            </Button>

                        </Grid>

                        <UniformGrid x:Name="ArtistGrid" 
                             Rows="1" 
                             Columns="6" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             Margin="0,0,0,0"/>
                    </DockPanel>
                </Grid>

            </Grid>

        </ScrollViewer>

        <Grid
            Width="1920"
            Height="152"
            VerticalAlignment="Bottom"
            Background="#101011">

        </Grid>
    </Grid>
</Page>